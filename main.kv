#:kivy 1.10.0

ScreenManager:
	ActionScreen:
	SettingsScreen:

<ActionScreen>:
	name: 'action'
	BoxLayout:
		orientation: 'vertical'
		size_hint: .85,.9
		pos_hint: {'center_x': .5, 'center_y': .5}
		spacing: 12
		Button:
			text: 'Load Model'
			on_press: root.load_model()
		Button:
			text: 'Train'
			on_press: root.train()
		Button:
			text: 'Generate'
			on_press: root.generate()
		Button:
			text: 'Write'
			on_press: root.write()
		Button:
			text: 'Change Parameters'
			on_press:
				root.manager.transition.direction = 'left'
				root.manager.current = 'settings'

<SettingsScreen>:
	name: 'settings'
	on_enter:
		root.load_settings()
	Settings:
		id: sets
		on_close:
			root.manager.transition.direction = 'right'
			root.manager.current = 'action'
