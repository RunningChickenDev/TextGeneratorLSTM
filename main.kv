		# 	Spinner:
		# 		text: 'Double'
		# 		background_color: .0, .0, .8, 1.
		# 		values: ('Single', 'Double')
		# 	Label:
		# 		text: 'Corpus Path:'
		# 		halign: 'left'
		# 		size_hint_x: None
		# 	TextInput:
		# 		id: txt_corpus
		# 		text: ''
		# 	Label:
		# 		text: 'Sequence Length:'
		# 		halign: 'left'
		# 		size_hint_x: None
		# 	TextInput:
		# 		id: txt_seq_len
		# 		text: ''
		# 		input_filter: 'int'
		# 	Label:
		# 		text: 'Step Size:'
